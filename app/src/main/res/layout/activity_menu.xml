<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_fondo"
    android:screenOrientation="landscape"
    tools:context="com.plataformas.MenuActivity">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background=""
        android:src="@drawable/boton_jugar"
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="122dp"
        android:onClick="JugarOnClick"/>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background=""
        android:src="@drawable/boton_opciones"
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="184dp"
        android:onClick="OpcionesOnClick"/>

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background=""
        android:src="@drawable/boton_salir"
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="248dp" android:onClick="SalirOnClick"/>
</android.support.constraint.ConstraintLayout>
