<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/opciones_fondo"
    android:screenOrientation="landscape"
    tools:context="com.plataformas.OpcionesActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:orientation="vertical">

        <ImageButton
                android:id="@+id/musicBoton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:onClick="MusicaOnClick"
                app:srcCompat="@drawable/boton_musica_activada"
                tools:layout_editor_absoluteX="190dp"
                tools:layout_editor_absoluteY="132dp" />

        <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#00ffffff"
            android:onClick="PelotasOnClick"
                app:srcCompat="@drawable/boton_opciones"
                tools:layout_editor_absoluteX="190dp"
                tools:layout_editor_absoluteY="212dp" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#00ffffff"
            android:onClick="VolverOnClick"
            app:srcCompat="@drawable/boton_volver_menu" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
